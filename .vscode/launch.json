{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Remote (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "https://teams.microsoft.com/l/app/${{TEAMS_APP_ID}}?installAppPackage=true&webjoin=true&${account-hint}",
      "presentation": {
        "group": "remote",
        "order": 1
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch Remote (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "https://teams.microsoft.com/l/app/${{TEAMS_APP_ID}}?installAppPackage=true&webjoin=true&${account-hint}",
      "presentation": {
        "group": "remote",
        "order": 2
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch App (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "https://teams.microsoft.com/l/app/${{local:TEAMS_APP_ID}}?installAppPackage=true&webjoin=true&${account-hint}",
      "cascadeTerminateToConfigurations": ["Launch Docker Node.js"],
      "presentation": {
        "group": "all",
        "hidden": true
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch App (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "https://teams.microsoft.com/l/app/${{local:TEAMS_APP_ID}}?installAppPackage=true&webjoin=true&${account-hint}",
      "cascadeTerminateToConfigurations": ["Launch Docker Node.js"],
      "presentation": {
        "group": "all",
        "hidden": true
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch Docker Node.js",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node",
      "node": {
        "port": 9239,
        "address": "localhost",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/usr/src/app"
      },
      "removeContainerAfterDebug": true
    }
  ],
  "compounds": [
    {
      "name": "Debug in Docker (Edge)",
      "configurations": ["Launch App (Edge)", "Launch Docker Node.js"],
      "preLaunchTask": "Start application in Docker",
      "presentation": {
        "group": "all",
        "order": 2
      }
    },
    {
      "name": "Debug in Docker (Chrome)",
      "configurations": ["Launch App (Chrome)", "Launch Docker Node.js"],
      "preLaunchTask": "Start application in Docker",
      "presentation": {
        "group": "all",
        "order": 2
      },
      "stopAll": true
    },
    {
      "name": "Debug in Test Tool (Preview)",
      "configurations": ["Launch Docker Node.js"],
      "preLaunchTask": "Start Teams App (Test Tool)",
      "presentation": {
        "group": "1-local",
        "order": 1
      },
      "stopAll": true
    }
  ]
}
